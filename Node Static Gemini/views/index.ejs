<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movie Ticket Booking</title>
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body>
    <h1>Movie Ticket Booking</h1>
    <ul>
      <% movies.forEach(movie => { %>
      <li>
        <h2><%= movie.title %></h2>
        <ul>
          <% movie.showtimes.forEach(showtime => { %>
          <li>
            <%= showtime %>
            <button
              onclick="bookTicket('<%= movie.title %>', '<%= showtime %>')"
            >
              Book
            </button>
          </li>
          <% }) %>
        </ul>
      </li>
      <% }) %>
    </ul>

    <p>
      **Note:** This is a simulation. Booking functionality is not yet
      implemented for security reasons.
    </p>
  </body>
</html>

<script>
  function bookTicket(movieTitle, showtime) {
    alert(`Ticket booked successfully for "${movieTitle}" at ${showtime}!`);
  }
</script>
